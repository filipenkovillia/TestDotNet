@model System.Data.DataTable
@{
    ViewBag.Title = "Users";
}
<h2>@ViewBag.Title.</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>Address Book ID</th>
        <th>Actions</th>
    </tr>
    @for(int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>
                <a href="@Url.Action("Edit", "User", new { @id = Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("Delete", "User", new { @id = Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "User")">Add User</a>

